<% breadcrumb :postedit, @post %>

<h1>Editing Post</h1>
<div class="container">
<%= render 'form', post: @post %>
</div>

<h1>Удалить панорамы (клик по панораме)</h1>
  <div id="gallery-container">
  <% unless @post.panoramas.empty? %>
  <% @post.panoramas.each do |panorama| %>
  <%= link_to panorama, data: { confirm: "Are you sure?", method: "delete" } do %>
 <img class="photo" src=" <%= panorama.image.url(:thumb) %>" >
 <h1>&times;</h1>
  <% end %>
  <% end %>
<% end %>



    </div>


<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>

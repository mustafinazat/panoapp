
<% breadcrumb :posts, @posts %>

                <div class="row">
                <div class="col-9 col-md-8 col-lg-9 col-xl-9 d-flex justify-content-between align-content-around navigation-clean-search">
               <%= form_with url: posts_path, :class => 'form-inline', id: "posts_search",  method: :get, html: { style: "width:100%" }  do |form| %>

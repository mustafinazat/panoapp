<% set_meta_tags title: "Регистрация ", description: "Регистрация на i360.cam",
                 reverse: true,
                 og: { title: "Регистрация | i360.cam" }
%>

<% breadcrumb :sign_up %>
                <div class="row">
                <div class="col-lg-12">
                    <h3 class="mt-4 mb-3">Регистрация</h3>
          
        </div>
                <div class="col-md-8 col-lg-9">



                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="form-group">
    <%= f.text_field :nickname,  autofocus: true,  placeholder: "Логин (обязательно, минимум 5 символов)", class: "form-control"%>
  </div>

   <div class="form-group">
     <%= f.text_area :description, :rows => 2, placeholder: "Чуть чуть информации о себе... (обязательно, минимум 22 символа)", class: "form-control"%>
      </div>
  

  <div class="form-group">
    <%= f.email_field :email , placeholder: "Email (обязательно)", class: "form-control"%>
  </div>

  <div class="form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> символов минимум)</em>
    <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Пароль (обязательно)", class: "form-control"%>
  </div>

  <div class="form-group">

    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Подтверждение пароля (обязательно)", class: "form-control" %>
  </div>

    <div class="form-group">
    <%= f.submit "Зарегистрироваться" ,class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>



                </div>

                <div class="col-md-4 col-lg-3">
                    <p>Регистрация</p>
                   </div>


</div>


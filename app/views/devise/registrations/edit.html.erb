<% set_meta_tags title: "Редактирование профиля ", description: "Редактирование профиля на i360.cam",
                 reverse: true,
                 og: { title: "Редактирование профиля | i360.cam" }
%>

<% breadcrumb :useredit, resource %>
                <div class="row">
                <div class="col-lg-12">
                    <h3 class="mt-4 mb-3">Редактирование профиля <%= link_to resource.nickname, user_path(resource) %></h3>
                  </div>
                <div class="col-md-8 col-lg-9">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>


     <div class="form-group">
    <%= f.text_field :nickname, placeholder: "Логин (обязательно)", class: "form-control"%>
  </div>

                      <div class="form-group">
                        <%= f.text_area :description, placeholder: "Информация о себе (контакты) - обязательно (минимум 22 символа)", class: "form-control"%>
                      </div>


    <div class="form-group">
    <%= f.email_field :email, autofocus: true , placeholder: "Email", class: "form-control"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <i>(Оставьте следующие два поля пустыми, если не хотите менять пароль)</i><br />
     <%= f.password_field :password, autocomplete: "off", placeholder: "Новый пароль", class: "form-control"%>
    <% if @minimum_password_length %>
       <em><%= @minimum_password_length %> символов минимум</em>
    <% end %>
  </div>
    <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Подтверждение пароля", class: "form-control" %>
  </div>

  <div class="form-group">
    <i>(Введите текущий пароль,чтобы сохранить изменения)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", placeholder: "Текущий пароль", class: "form-control" %>
  </div>

    <div class="form-group">
    <%= f.submit "Обновить" ,class: "btn btn-primary btn-block" %>
  </div>

<% end %>

<%= link_to "Вернуться в профиль", user_path(resource) %>

                </div>
                <div class="col-md-4 col-lg-3">
                    <p>Редактирование профиля</p>
                </div>
</div>





<div class="row align-items-center">
    <div class="col">
        <h1 class="mt-4 mb-3">Профиль</h1></div>
                   <% if current_user == @user %>
    <div class="col-2 col-sm-2 col-md-1 col-lg-1 col-xl-1 align-items-baseline">

        <%= link_to edit_user_registration_path, class: 'btn btn-info' do %>

 <i class="fa fa-edit"></i>
 <% end %>


    </div>
    <div class="col-2 col-sm-2 col-md-1 col-lg-1 col-xl-1 align-items-baseline">
        <a href="#" class="btn btn-danger"> <i class="fa fa-remove"></i></a>
    </div>

     <% end %>
</div>


<div class="row">
    <div class="col-12 col-sm-3 col-md-3 col-lg-4 col-xl-3"><%= image_tag @user.avatar.url, class: "rounded-circle img-fluid d-flex m-auto" %></div>
    <div class="col-12 col-sm-9 col-md-9 col-lg-8 col-xl-9">
        <div class="row">
            <div class="col-xl-12">
                <h3><%= @user.nickname %></h3></div>
            <div class="col-xl-12">
                <p>Кратко о себе, контакты и т.д</p>
            </div>
            <div class="col">
                <div class="social-icons"><a href="#"><i class="icon ion-social-youtube"></i></a><a href="#"><i class="icon ion-social-twitter"></i></a><a href="#"><i class="icon ion-social-facebook"></i></a><a href="#"><i class="icon ion-social-snapchat"></i></a></div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-xl-12 text-center">
        <h1 class="text-center mt-4 mb-3">Панорамы</h1>
        <div class="tz-gallery">
            <div class="row">

  <% unless @posts.empty? %>
  <% @posts.each do |post| %>

  <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4">
    <div class="thumbnail">


  <%= link_to post, class: 'lightbox',data: { turbolinks: false }  do %>



 <% if (!post.vk_album_id.empty?)
   vk = VkontakteApi::Client.new(session[:token]) %>
 <img src=" <%= vk.photos.get(owner_id: post.vk_owner_id, album_id: post.vk_album_id).first.src %>" >
 <% else %>
 <img src=" <%= post.panoramas.first.image.url(:thumb) %>" >
<% end %>


         <div class="caption">
            <h3><%= post.title %> от</h3>
            <h4><%= post.user.nickname %></h4>
            </div>
 <% end %>

   </div>
 </div>
  <% end %>
<% end %>

            </div>
        </div><a href="#" class="btn btn-outline-primary text-center">Показать все панорамы</a>



        </div>
    <div class="col-md-12 col-xl-12 text-center">
        <h1 class="text-center mt-4 mb-3">Виртуальные туры</h1>
        <div class="tz-gallery">
            <div class="row">


  <% unless @posts.empty? %>
  <% @posts.each do |post| %>

  <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4">
    <div class="thumbnail">


  <%= link_to post, class: 'lightbox',data: { turbolinks: false }  do %>



 <% if (!post.vk_album_id.empty?)
   vk = VkontakteApi::Client.new(session[:token]) %>
 <img src=" <%= vk.photos.get(owner_id: post.vk_owner_id, album_id: post.vk_album_id).first.src %>" >
 <% else %>
 <img src=" <%= post.panoramas.first.image.url(:thumb) %>" >
<% end %>


         <div class="caption">
            <h3><%= post.title %> от</h3>
            <h4><%= post.user.nickname %></h4>
            </div>
 <% end %>

   </div>
 </div>
  <% end %>
<% end %>

            </div>
        </div><a href="#" class="btn btn-outline-primary text-center">Показать все виртуальные туры</a>
        </div>
</div>


